# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 2
tab_width = 8
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{bat,cmd}]
end_of_line = crlf

[*.{diff,patch}]
trim_trailing_whitespace = false

[*.go]
indent_style = tab
indent_size = tab
tab_width = 4

[*.hs]
indent_size = 4

[*.journal]
indent_size = 4

[{*.mk,Makefile,Makefile.inc}]
indent_style = tab
indent_size = tab

[*.py]
indent_size = 4

[*.reg]
end_of_line = crlf

[*.rs]
indent_size = 4
max_line_length = 99

[*.[Sims]]
indent_style = tab
indent_size = tab

[*.{sh,do}]
indent_style = tab
indent_size = tab

[*.txt]
indent_style = tab
indent_size = tab
trim_trailing_whitespace = false

[{.gitconfig,gitconfig}]
indent_style = tab
indent_size = tab

[LICENSE]
indent_size = 5
max_line_length = 78

[{crontab,crontab.tmp}]
indent_style = tab
indent_size = tab
